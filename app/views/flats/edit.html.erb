<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Go back', flats_path, class: 'btn btn-primary' %>
